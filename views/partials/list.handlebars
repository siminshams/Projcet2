{{#each listResults}}
  <div class="innerCard2">
    <div class="row">
      <div class="col-auto">
        <div class="row">
          {{#if poster}}
            <img class="thumbPoster" align="left" src="https://image.tmdb.org/t/p/w92{{poster}}">
          {{/if}}
        </div>
        <div class="row">
          <button 
            class="mark-watched" 
            data-id="{{id}}">
            MARK WATCHED
          </button>
        </div>
      </div>
      <div class="col">
        <h3>{{title}}</h3>
        <p><span class="year">({{year}})</span>{{overview}}</p>
      </div>
    </div>
  </div>
  <br>
{{/each}}